<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ludus.commontalks.views.MainFragment.FeedFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/noChatRoomLayout"
            android:visibility="gone"
            android:background="#ffffff"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                >

                <ImageView
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_sad_logogrey"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="다른 사람들의 지금을 다 보았어요."
                    android:textSize="22sp"
                    android:layout_gravity="center"
                    android:textColor="#9e9e9e"
                    android:layout_marginTop="5dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#ababab"
                    android:layout_gravity="center"
                    android:text="다른 사람들이 지금을 공유할때까지 \n 내 지금을 적어볼까요?"
                    android:textAlignment="center"
                    android:layout_marginTop="8dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="vertical"
                android:layout_marginBottom="63dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="지금 쓰기"
                    android:layout_gravity="center"
                    android:layout_marginBottom="3dp"
                    android:textColor="#4cdcff"
                    android:textSize="16sp"
                    android:layout_marginRight="130dp"
                    />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/ic_pointer"
                    android:layout_gravity="center"
                    android:layout_marginRight="130dp"
                    />


            </LinearLayout>
        </android.support.constraint.ConstraintLayout>


        <com.mindorks.placeholderview.SwipePlaceHolderView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/swipeView"
            >



        </com.mindorks.placeholderview.SwipePlaceHolderView>
    </FrameLayout>

</FrameLayout>
