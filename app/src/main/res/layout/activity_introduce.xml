<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ludus.commontalks.views.IntroduceActivity">

    <android.support.v4.view.ViewPager
        android:layout_width="330dp"
        android:layout_height="450dp"
        android:id="@+id/introduceViewPager"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        >

    </android.support.v4.view.ViewPager>


    <com.matthewtamlin.sliding_intro_screen_library.DotIndicator
        android:id="@+id/main_indicator_ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="82dp"
        />

    <ImageView
        android:layout_width="209dp"
        android:layout_height="41dp"
        android:src="@drawable/ic_start_app_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="20dp"
        android:id="@+id/startAppBtn"
        />


</android.support.constraint.ConstraintLayout>
