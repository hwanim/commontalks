<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ludus.commontalks.views.WritePostActivity"
    android:background="#ffffff"
    >


    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:id="@+id/toolbarTitleTextView"
                android:text="지금"
                android:layout_gravity="center"
                android:fontFamily="@font/stonbrand"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="7dp"
                android:id="@+id/settingActivityBtn"
                />
        </FrameLayout>

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/my_toolbar"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="20dp"
        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:orientation="horizontal"
                android:id="@+id/postProfileInfoLayout"
                android:focusable="true"
                android:focusableInTouchMode="true"
                >

                <ImageView
                    android:layout_width="40dp"
                    android:scaleType="centerCrop"
                    android:layout_height="40dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="14dp"
                    android:id="@+id/userProfilePhoto"
                    />

                <LinearLayout
                    android:layout_width="284dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:textSize="18sp"
                        android:layout_marginTop="14dp"
                        android:id="@+id/userNickname"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="1dp"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            app:srcCompat="@drawable/ic_like_actv"
                            android:id="@+id/writePostRatingLikeImage"
                            android:visibility="gone"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:text=""
                            android:id="@+id/writePostRatingInfo"
                            />



                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_gravity="center"
                    android:id="@+id/reportFeedUser"
                    />
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/postPreviewImageLayout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/postProfileInfoLayout"
                android:background="@drawable/border_write_post"
                >

                <ImageView
                    android:id="@+id/postPreviewImage"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    />

                <ImageView
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:id="@+id/plusCrossImage"
                    app:srcCompat="@drawable/ic_post_add_cross_drawable"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    />

                <TextView
                    android:id="@+id/addYourPhotoTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="145dp"
                    android:text="사진도 추가해 보세요."
                    android:textColor="#d8d8d8"
                    android:textSize="20sp" />


            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/postPreviewImageLayout"
                android:orientation="horizontal"
                android:id="@+id/postTxtLayout"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:background="@drawable/border_write_post"
                >

                <ImageView
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:background="@color/designBarColor"
                    />

                <EditText
                    android:id="@+id/postTxt"
                    android:layout_width="match_parent"
                    android:paddingEnd="20dp"
                    android:paddingStart="9dp"
                    android:layout_height="wrap_content"
                    android:hint="당신의 지금을 표현해보세요."
                    android:background="@android:color/transparent"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:maxLines="6"
                    >

                </EditText>


            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@drawable/border_line"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/postTxtLayout"
                android:id="@+id/border_chatLimitTop"
                />

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:layout_constraintTop_toBottomOf="@id/border_chatLimitTop"
                android:id="@+id/chatLimitConstLayout"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:id="@+id/chatLimitSettingLayout"
                    >
                    <ImageView
                        android:layout_width="2dp"
                        android:layout_height="19dp"
                        android:layout_marginStart="20dp"
                        android:background="@color/designBarColor"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="9dp"
                        android:text="채팅방 제한"
                        android:textSize="16sp"
                        android:layout_weight="1"
                        />
                    <Switch
                        android:id="@+id/notificationSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/chatLimitSettingLayout"
                    android:gravity="center"
                    android:id="@+id/chatLimitSeekbarLayout"
                    android:visibility="gone"
                    >

                    <android.support.v7.widget.AppCompatSeekBar
                        android:id="@+id/chatLimitSeekbar"
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:max="30"
                        style="@style/MySeekBar"
                        />

                    <TextView
                        android:id="@+id/chatLimitShow"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:text="0숨"/>




                </LinearLayout>

            </android.support.constraint.ConstraintLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@drawable/border_line"
                app:layout_constraintTop_toBottomOf="@id/chatLimitConstLayout"
                />



            <ImageView
                android:layout_width="194dp"
                android:layout_height="51dp"
                android:id="@+id/posting"
                app:srcCompat="@drawable/ic_posting_submit"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/chatLimitConstLayout"
                android:layout_marginTop="70dp"
                />

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/posting"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="대화가 너무 많이 오나요?"
                    android:id="@+id/text1"
                    android:layout_marginTop="5dp"
                    app:layout_constraintRight_toLeftOf="@+id/describeChatLimit"
                    android:layout_marginRight="3dp"
                    />

                <TextView

                    android:id="@+id/describeChatLimit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="채팅방 제한 기능이란?"
                    app:layout_constraintLeft_toRightOf="@+id/text1"
                    app:layout_constraintTop_toBottomOf="@id/posting"
                    android:layout_marginTop="5dp"
                    android:textColor="#3e87ff"
                    />
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
