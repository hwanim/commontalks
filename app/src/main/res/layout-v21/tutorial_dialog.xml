<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/tutorialDialogRootViewLayout"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/tutorialToolbar"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        >


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:id="@+id/tutorialToolbarTitleTextView"
                android:text="일상의 대화"
                android:layout_gravity="center"
                android:fontFamily="@font/stonbrand"
                />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="right"
                app:srcCompat="@drawable/ic_more_btn"
                android:layout_marginRight="7dp"
                android:id="@+id/settingActivityBtn"
                android:visibility="gone"
                />
        </FrameLayout>
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/skipTutorialBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/stonbrand"
        app:layout_constraintTop_toBottomOf="@id/tutorialToolbar"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginRight="25dp"
        android:text="@string/skipTuto"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="#696969"
        />


    <android.support.constraint.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="194dp"
        android:background="@drawable/round_background"
        android:id="@+id/tutorial1Layout"
        android:layout_gravity="center"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tutorialtext1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="34dp"
            android:textSize="26sp"
            android:textColor="@color/feedContentsTxtMain"
            />


        <ImageView
            android:layout_width="83dp"
            android:layout_height="54dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="51.5dp"
            android:id="@+id/tuto1Image"
            android:src="@drawable/ic_launcher_logo"
            android:scaleType="centerCrop"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tuto1Image"
            android:layout_marginLeft="55dp"
            android:layout_marginBottom="22dp"
            android:text="@string/start"
            android:fontFamily="@font/stonbrand"
            android:textSize="22sp"
            android:textColor="@color/btnAcceptColor"
            android:id="@+id/tuto1StartBtn"
            />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/tutorial2Layout"
        android:background="@drawable/ic_speech_bubble_1"
        android:layout_marginBottom="77dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone"
        >

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/ic_feed_icon_color"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="32dp"
            android:id="@+id/tutorial2LayoutIcon"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tutorial2LayoutIcon"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="10dp"
            android:text="@string/navDialogTitle1"
            android:textSize="24sp"
            android:textColor="@color/feedContentsTxtMain"
            android:id="@+id/tutorial2LayoutTitle"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tutorial2LayoutIcon"
            android:text="@string/navDialog1"
            android:layout_marginTop="20dp"
            android:id="@+id/tutorial2LayoutContent"
            android:textSize="16sp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/next"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="70dp"
            android:layout_marginRight="50dp"
            android:fontFamily="@font/stonbrand"
            android:textSize="22sp"
            android:textColor="@color/btnAcceptColor"
            android:id="@+id/tutorial2LayoutNextBtn"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:textSize="22sp"
            android:id="@+id/tutorial2LayoutBackBtn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="70dp"
            android:layout_marginLeft="50dp"
            android:fontFamily="@font/stonbrand"
            android:textStyle="bold"
            />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/swipeTutorialLayout"
        android:layout_marginBottom="77dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone"
        >

        <ImageView
            android:layout_width="600dp"
            android:layout_height="match_parent"
            android:background="@drawable/dot"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <ImageView
            android:layout_width="62dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_swipe1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="120dp"
            android:id="@+id/navSwipeLeft"
            />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_swipe2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="120dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="50dp"
            android:id="@+id/navSwipeRight"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/swipeLeft"
            android:textColor="#FFF"
            app:layout_constraintTop_toBottomOf="@id/navSwipeLeft"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="40dp"
            android:textSize="24sp"
            android:textAlignment="center"
            android:id="@+id/navSwipeTitle1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/swipeRight"
            android:textColor="#FFF"
            app:layout_constraintTop_toBottomOf="@id/navSwipeRight"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="30dp"
            android:textSize="24sp"
            android:textAlignment="center"
            android:id="@+id/navSwipeTitle2"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/swipeLeftContent"
            android:textColor="#FFF"
            app:layout_constraintTop_toBottomOf="@id/navSwipeTitle1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            android:textAlignment="center"
            android:id="@+id/navSwipeContent1"
            android:layout_marginTop="24dp"
            android:textSize="16sp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/swipeRightContent"
            android:textColor="#FFF"
            app:layout_constraintTop_toBottomOf="@id/navSwipeTitle2"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="20dp"
            android:textAlignment="center"
            android:id="@+id/navSwipeContent2"
            android:layout_marginTop="24dp"
            android:textSize="16sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/next"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="40dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/stonbrand"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/btnAcceptColor"
            android:id="@+id/swipeTutorialLayoutNextBtn"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/back"
            android:id="@+id/swipeTutorialLayoutBackBtn"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="50dp"
            android:fontFamily="@font/stonbrand"
            android:textSize="22sp"
            android:textStyle="bold"
            />

    </android.support.constraint.ConstraintLayout>



    <android.support.constraint.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/firstSwipeLayout"
        android:background="@drawable/ic_combined_shape"
        android:layout_gravity="center"
        android:layout_marginBottom="77dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="40dp"
            android:text="@string/firstSwipeLayoutTitleLeft"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/feedContentsTxtMain"
            android:id="@+id/firstSwipeLayoutTitle"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/firstSwipeLayoutTitle"
            android:text="@string/firstSwipeLayoutContentLeft"
            android:layout_marginTop="20dp"
            android:id="@+id/firstSwipeLayoutContent"
            android:textColor="#b6b6b6"
            android:textSize="16sp"
            android:textAlignment="center"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/swipe"
            app:layout_constraintTop_toBottomOf="@id/firstSwipeLayoutContent"
            android:layout_marginTop="31dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="50dp"
            android:textColor="@color/btnAcceptColor"
            android:id="@+id/firstSwipeLayoutNextBtn"
            android:textSize="22sp"
            android:fontFamily="@font/stonbrand"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:id="@+id/firstSwipeLayoutBackBtn"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="31dp"
            app:layout_constraintTop_toBottomOf="@id/firstSwipeLayoutContent"
            android:layout_marginLeft="50dp"
            android:textSize="22sp"
            android:fontFamily="@font/stonbrand"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="10dp"
        android:id="@+id/chatTutoLayout"
        android:visibility="gone"
        >


        <ImageView
            android:layout_width="350dp"
            android:layout_height="400dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/ic_chat_tuto_image"
            android:scaleType="center"
            />


    </android.support.constraint.ConstraintLayout>

    <!--레이팅 튜토리얼-->
    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/ratingTutoLayout"
        android:background="@drawable/round_background"
        android:visibility="gone"
        >

        <ImageView
            android:layout_width="306dp"
            android:layout_height="320dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/img_rating_guide1"
            android:scaleType="fitXY"
            android:id="@+id/ratingImageView"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ratingImageView"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/ratingTutoYesBtn"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="19dp"
            android:layout_marginRight="30dp"
            android:textSize="22sp"
            android:textColor="@color/btnAcceptColor"
            android:text="@string/confirm"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ratingImageView"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/ratingTutoNoBtn"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="19dp"
            android:layout_marginLeft="30dp"
            android:textSize="22sp"
            android:text="@string/moreChat"
            android:textColor="@color/popupContentsButton"
            android:visibility="gone"

            />



    </android.support.constraint.ConstraintLayout>



    <com.roughike.bottombar.BottomBar
        android:background="@drawable/chatroombottomborder"
        android:id="@+id/tutorialBottomBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:bb_tabXmlResource="@xml/bottombar_tabs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:bb_activeTabColor="#3e87ff"
        />

</android.support.constraint.ConstraintLayout>