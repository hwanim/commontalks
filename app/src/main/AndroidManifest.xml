<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ludus.commontalks">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.android.vending.BILLING" />
    <uses-feature android:name="android.hardware.camera2" android:required="false"/>

    <application
        android:name=".Base.BaseApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launchcer_square"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcer_round1"
        android:supportsRtl="true"
        android:theme="@style/CustomTheme.commontalks">
        <activity android:name=".views.LoginActivity" />
        <activity android:name=".views.TutorialActivity" />
        <activity
            android:name=".views.MainActivity"/>
        <activity android:name=".views.WritePostActivity" />
        <activity android:name=".views.ChatActivity" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.ludus.commontalks.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity android:name=".views.SettingActivity" />
        <activity android:name=".views.PaymentActivity" />
        <activity android:name=".views.ViewAdsActivity" />

        <service android:name=".Services.NotificationService" />

        <activity
            android:name=".views.StartActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.IntroduceActivity" />
        <activity android:name=".views.ContractsActivity" />
        <activity android:name=".views.SuggestFeedbackActivity"></activity>


        <service
            android:name=".Services.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

        <service
            android:name=".Services.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>


    </application>

</manifest>